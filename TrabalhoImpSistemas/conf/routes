# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /home                       controllers.Application.home()
GET		/user/cadastrar				controllers.UserCRUD.novoUsuario()
#GET	/usuario/mensagens			controllers.Application.mensagens()
POST    /home                       controllers.Application.home()
GET 	/user/						controllers.UserCRUD.gravar()
GET 	/user						controllers.UserCRUD.lista()
GET     /user/:id                   controllers.UserCRUD.detalhar(id: Long)
GET		/projeto/cadastrar			controllers.ProjetoCRUD.novoProjeto()
GET 	/projeto/					controllers.ProjetoCRUD.gravar()


GET     /projeto:id                         controllers.ProjetoCRUD.lista(id: Long)
GET     /projeto/:id                   controllers.ProjetoCRUD.detalhar(id: Long)
POST   /projeto/                        controllers.ProjetoCRUD.gravar()
POST   /projeto/:id/remover   controllers.ProjetoCRUD.remover(id:Long)
POST   /projeto/:id                   controllers.ProjetoCRUD.alterar(id:Long)




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
